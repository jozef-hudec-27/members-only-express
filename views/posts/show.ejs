<h1>Post by <%= currentUser?.isMember ? post.user.fullName : 'UNKNOWN' %></h1>

<div>
  <% if (currentUser?.isMember) { %>
  <em><%= post.createdAt %></em>
  <% } %>

  <h2><%= post.title %></h2>
  <p><%= post.body %></p>
</div>

<% if (currentUser?._id.toString() === post.user._id.toString()) { %>
<div>
  <h3>Danger zone!</h3>

  <form action="<%= post.url %>/delete" method="post">
    <button type="submit">Delete</button>
  </form>
</div>
<% } %>
