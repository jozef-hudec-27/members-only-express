<h1>Create post</h1>

<form action="" method="post">
  <div>
    <label for="title">Title:</label>
    <input type="text" name="title" id="title" value="<%= locals.post ? post.title : '' %>" required />
  </div>

  <div>
    <label for="body">Body:</label>
    <textarea name="body" id="body" required><%= locals.post ? post.body : '' %></textarea>
  </div>

  <button type="submit">Submit</button>
</form>

<ul>
  <% locals.errors?.map(err => { %>
  <li><%= err.msg %></li>
  <% }) %>
</ul>
